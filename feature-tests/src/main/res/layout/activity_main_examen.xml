<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/havoline_texture_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruta 1"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_bold"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:textSize="18sp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_bold"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:text="Prueba Experto"
                android:layout_marginEnd="16dp"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>




    <RelativeLayout
        android:id="@+id/globe_relative"
        android:layout_marginTop="84dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_globe"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/generic_img_globe_finish_black"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/gotham_bold"
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a tu\nprimera prueba\nExperto"
            android:textSize="20sp"
            android:textColor="#FFD200"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:textAlignment="center"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtitle_welcome"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_welcome"
            android:text="Selecciona una respuesta\na tu pregunta, comprueba\nsi es correcta y pasa a la\nsiguiente. Â¡Suerte!"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/character_image"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/havoline_img_character"
        android:layout_below="@+id/globe_relative" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/black"
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/character_image"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/generic_yellow_button_rounded_corners"
        android:drawableEnd="@drawable/ic_btn_play"
        android:fontFamily="@font/gotham_bold"
        android:paddingEnd="32dp"
        android:text="Continuar" />


</RelativeLayout>