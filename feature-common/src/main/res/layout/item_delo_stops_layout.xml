<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/generic_background_blue_and_rounded_corners"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gotham_bold"
        android:text="Parada 1"
        android:textColor="#FFF"
        android:textSize="23sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lock_image"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_flag"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/subtitle_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_stop"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/gotham_book"
        android:text="Lo b치sico"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/text_1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/subtitle_stop"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="#00CAF9" />

        <TextView
            android:id="@+id/titleText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.8"
            android:fontFamily="@font/gotham_book"
            android:text="C칩mo beneficia un lubricante a su motor?"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/status_lesson_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/ic_disabled_play" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_2"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/text_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <View
            android:layout_weight="0.02"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#00CAF9"/>
        <TextView
            android:id="@+id/titleText2"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.8"
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C칩mo beneficia un lubricante a su motor?"
            android:fontFamily="@font/gotham_book"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/status_lesson_2"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_disabled_play"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/text_2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="#00CAF9" />

        <TextView
            android:id="@+id/titleAudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.8"
            android:fontFamily="@font/gotham_book"
            android:text="C칩mo beneficia un lubricante a su motor?"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/status_lesson_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/ic_disabled_audio" />


    </LinearLayout>



</RelativeLayout>