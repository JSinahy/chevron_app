<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/generic_background_red_and_rounded_corners"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/gotham_bold"
        android:text="Parada 1"
        android:textColor="#FFF"
        android:textSize="@dimen/_23ssp" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lock_image"
        android:visibility="gone"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_flag"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/subtitle_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_stop"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/gotham_book"
        android:text="Lo b치sico"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20ssp" />
    <LinearLayout
        android:id="@+id/text_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/subtitle_stop"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="horizontal">
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="#FF1100" />
        <TextView
            android:id="@+id/titleText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_weight="0.8"
            android:fontFamily="@font/gotham_book"
            android:text="C칩mo beneficia un lubricante a su motor?"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />
        <ImageView
            android:id="@+id/status_lesson_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/ic_disabled_play" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_2"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_below="@+id/text_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">
        <View
            android:layout_weight="0.02"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FF1100"/>
        <TextView
            android:id="@+id/titleText2"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_weight="0.8"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C칩mo beneficia un lubricante a su motor?"
            android:fontFamily="@font/gotham_book"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/status_lesson_2"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_disabled_play"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/audio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/text_2"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:orientation="horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="#FF1100" />
        <TextView
            android:id="@+id/titleAudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_weight="0.8"
            android:fontFamily="@font/gotham_book"
            android:text="C칩mo beneficia un lubricante a su motor?"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />
        <ImageView
            android:id="@+id/status_lesson_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/ic_disabled_audio"
            android:contentDescription="@null" />
    </LinearLayout>
</RelativeLayout>